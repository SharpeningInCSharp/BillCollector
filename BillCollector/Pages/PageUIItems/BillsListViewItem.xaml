<UserControl x:Class="BillCollector.Pages.PageUIItems.BillsListViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BillCollector.Pages.PageUIItems"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid x:Name="MainGrid" Background="#6FD2ED">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="DateTextBlock"   Grid.Column="0"
                   FontSize="24" Text="Jopa"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <Button x:Name="ViewDocButton"
                Grid.Column="1"
                Content="Open"
                TextBlock.FontSize="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Click="ViewDocButton_Click"
                Style="{StaticResource TransparentButton}"/>
    </Grid>
</UserControl>
