<UserControl x:Class="AdditionalControls.PieLegendItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdditionalControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel Orientation="Horizontal" Margin="4,10,4,10">
        <Border x:Name="ItemColor" Background="{Binding Color}"
                MaxHeight="30" MaxWidth="30"
                HorizontalAlignment="Center"/>
        <TextBlock x:Name="ItemName" Text="{Binding Title}" 
                   Margin="4"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Foreground="LightGray"
                   FontSize="24"/>
    </StackPanel>
</UserControl>
