<UserControl x:Class="AdditionalControls.PieDiagram"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdditionalControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" x:Name="legend"/>
        <Grid>
            
        </Grid>
        <StackPanel Grid.Column="2">
            <TextBlock x:Name="piePieceHeaderTextBlock"
                       TextAlignment="Center"
                       FontSize="20"/>
            <TextBlock x:Name="piePieceInfoTextBlock"
                       FontSize="14"/>
        </StackPanel>
      
    </Grid>
</UserControl>
